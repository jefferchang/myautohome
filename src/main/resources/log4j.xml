<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j='http://jakarta.apache.org/log4j/'>
    <appender name="ProgramError" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="encoding" value="UTF-8"/>
        <param name="file" value="${tomcat.logs.dir}/ProgramError.txt"/>
        <param name="DatePattern" value="'_'yyyy-MM-dd"/>
        <layout class="net.logstash.log4j.JSONEventLayoutV1">
        </layout>
        <filter class="org.apache.log4j.varia.LevelRangeFilter">
            <param name="LevelMin" value="warn"/>
        </filter>
    </appender>
    <appender name="ElapseTimeOut" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="file" value="${tomcat.logs.dir}/ElapseTimeOut.txt"/>
        <param name="DatePattern" value="'_'yyyy-MM-dd"/>
        <layout class="net.logstash.log4j.JSONEventLayoutV1"/>
    </appender>
    <appender name="__ElapseRemote" class="org.apache.log4j.net.SyslogAppender">
        <param name="SyslogHost" value="f1.apm.qichecdn.com:6003"/>
        <!--151测试使用-->
        <!--<param name="SyslogHost" value="10.168.100.151:5143"/>-->
        <!--<param name="Facility" value="LOCAL7"/>-->
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="`%d{yyyy-MM-dd HH:mm:ss}`${log.programLog}`%m%n"/>
        </layout>
    </appender>
    <appender name="ElapseRemote" class="org.apache.log4j.AsyncAppender">
        <param name="BufferSize" value="100000"/>
        <param name="Blocking" value="false" />
        <appender-ref ref="__ElapseRemote"/>
    </appender>
    <appender name="ElapseLocal" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="file" value="${tomcat.logs.dir}/ElapseLocal.txt"/>
        <param name="DatePattern" value="'_'yyyy-MM-dd"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="`%d{yyyy-MM-dd HH:mm:ss}`${log.programLog}`%m`%X{uri}?%X{queryString}%n"/>
        </layout>
    </appender>
    <appender name="asyncViewLogger" class="org.apache.log4j.AsyncAppender">
        <param name="BufferSize" value="10000"/>
        <appender-ref ref="ViewAppender"/>
    </appender>
    <appender name="ViewAppender" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="file" value="${tomcat.logs.dir}/ViewAppender.txt"/>
        <param name="DatePattern" value="'_'yyyy-MM-dd"/>
        <!--<param name="BufferedIO" value="true"/>-->
        <!--<param name="BufferSize" value="8192"/>-->
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} %m%n"/>
        </layout>
    </appender>
    <appender name="dealerResAdminLogger" class="com.autohome.shark.agent.log4j.SharkAppender">
        <param name="sendProtocol" value="udp"/>
        <param name="logCategory" value="dealerResAdmin"/>
        <param name="localStore" value="${tomcat.logs.dir}"/>
        <param name="sendSpeed" value="1500"/>
    </appender>
    <appender name="dealerResAdminClickLogger" class="com.autohome.shark.agent.log4j.SharkAppender">
        <param name="sendProtocol" value="udp"/>
        <param name="logCategory" value="dealerResAdminClick"/>
        <param name="localStore" value="${tomcat.logs.dir}"/>
        <param name="sendSpeed" value="1500"/>
    </appender>
    <appender name="dealerResAdminDunMaiLogger" class="com.autohome.shark.agent.log4j.SharkAppender">
        <param name="sendProtocol" value="udp"/>
        <param name="logCategory" value="dlr_dm_show"/>
        <param name="localStore" value="${tomcat.logs.dir}"/>
        <param name="sendSpeed" value="1500"/>
    </appender>
    <appender name="console" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern"
                   value="%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%L - %m%n" />
        </layout>
    </appender>

    <logger name="resAdminLogger" additivity="false">
        <level value="INFO"/>
        <appender-ref ref="console"/>
    </logger>
    <logger name="elapseLogger" additivity="false">
        <level value="INFO"/>
        <appender-ref ref="${elapseLogger.send.type}"/>
    </logger>
    <logger name="elapseTimeOutLogger" additivity="false">
        <level value="WARN"/>
        <appender-ref ref="ElapseTimeOut"/>
    </logger>
    <logger name="dealerResRequestLogger" additivity="false">
        <level value="${shark.Level}"/>
        <!--<appender-ref ref="asyncViewLogger"/>-->
        <appender-ref ref="dealerResAdminLogger"/>
    </logger>
    <logger name="dealerResClickRequestLogger" additivity="false">
        <level value="${shark.Level}"/>
        <appender-ref ref="dealerResAdminClickLogger"/>
    </logger>
    <logger name="dealerResDunMaiRequestLogger" additivity="false">
        <level value="${shark.Level}"/>
        <appender-ref ref="dealerResAdminDunMaiLogger"/>
    </logger>
    <logger name="resAdminErrorLogger" additivity="false">
        <level value="INFO"/>
        <appender-ref ref="ProgramError"/>
    </logger>
    <root>
        <level value="${log.root.Level}"/>
        <appender-ref ref="console"/>
    </root>
</log4j:configuration>